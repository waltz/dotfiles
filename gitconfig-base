[alias]
  co = "checkout"
  br = "branch"
  ci = "commit"
  st = "status"

[pager]
  branch = true

[init]
  defaultBranch = main

[branch]
  sort = -committerdate

[rerere]
  enabled = true

[push]
    autoSetupRemote = true

[core]
    excludesFile = ~/.ignore

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
